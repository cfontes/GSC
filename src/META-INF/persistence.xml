<?xml version="1.0" encoding="UTF-8"?>
	<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
 		<persistence-unit name="gsc">
			 <provider>org.hibernate.ejb.HibernatePersistence</provider>
			 <class>br.com.gsc.model.tableMapping.Person</class>
			 <class>br.com.gsc.model.tableMapping.User</class>
			 <class>br.com.gsc.model.tableMapping.Operator</class>
			 <class>br.com.gsc.model.tableMapping.Admin</class>
			 <class>br.com.gsc.model.tableMapping.Post</class>
			 <class>br.com.gsc.model.tableMapping.Topic</class>
			 <class>br.com.gsc.model.tableMapping.Comment</class>	
			 <class>br.com.gsc.model.tableMapping.Company</class>
			 <class>br.com.gsc.model.tableMapping.Product</class>
				<properties> 
					<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" /> 
					<property name="hibernate.show_sql" value="true" /> 
					<property name="hibernate.hbm2ddl.auto" value="update" /> 
					<property name="hibernate.format_sql" value="true" />  
					<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" /> 
					<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/gsc" /> 
					<property name="hibernate.connection.username" value="gsc" /> 
					<property name="hibernate.connection.password" value="gsc" /> 
				</properties>
 		</persistence-unit>
</persistence>